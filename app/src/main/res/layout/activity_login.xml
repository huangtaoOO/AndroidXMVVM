<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="java.lang.String"/>
        <variable
                name="viewModel"
                type="com.tao.androidx_mvvm.viewmodel.ViewModelOfLogin"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.MainActivity">
        <EditText
                android:id="@+id/ed_login_name"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:text="@={viewModel.edName}"/>

        <EditText
                android:id="@+id/ed_login_pass"
                app:layout_constraintTop_toBottomOf="@id/ed_login_name"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:text="@={viewModel.edPass}"/>

        <Button
                app:layout_constraintTop_toBottomOf="@id/ed_login_pass"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:onClick="@{(view)->viewModel.onClick(view)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

